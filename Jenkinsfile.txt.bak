pipeline 
{
	agent any
	environment
	{
		VERSION_NAME = '1.3.0'
		SERVER_CRED= credentials('GIT-1')
	}
	stages 
	{
		stage ("Build") 
		{
			steps 
			{
				echo 'Stage Build'
				echo "Variable Name - ${VERSION_NAME}"
			}
		}
		stage ("Test") 
		{
			when
			{
				expression
				{
					BRANCH_NAME == 'master'
				}
			}
			steps 
			{
				echo 'Stage Test'
				echo "Variable Name - ${SERVER_CRED}"
			}
		}
		stage ("Deploy") 
		{
